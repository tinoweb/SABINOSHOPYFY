<a href="https://wa.me/55{{ settings.whats_num_sticky }}" class="whatsapp-button-sticky" target="_blank"> 
  <style>
    .whatsapp-button-sticky{
    position: fixed;
    right: 8px;
    bottom: 16px;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    border-radius: 50%;
    z-index: 9999;
    transition: all 0.3s ease-in-out;
    }
  

@media screen and (max-width: 1000px) {
 .whatsapp-button-sticky{
    bottom: 85px !important;
     }
  }
      </style>
      <img loading="eager" src="{{ 'VisionWpp.png' | asset_url }}" width="100%" height="100%" alt="WhatsApp Logo">
    </a>
    



