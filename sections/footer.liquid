                      <a href="{{ settings.link_reclameaqui }}">
                         <div class="selo"><img src="{{ 'Reclameaqui.svg' | asset_url }}" class="lazyload"  width="90"  height="35" alt="Selo do Reclame Aqui"> </div>
                      </a>
