                      <a href="{{ settings.linkselo }}">
                         <div class="selo"><img src="{{ settings.selo2 | img_url: image_size }}" class="lazyload"  width="90"  height="35" alt="Selo de seguran√ßa"> </div>
                      </a>
                      {% endif %}
                      {% endif %}
                      {% endif %}
