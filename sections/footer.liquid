                      {% if settings.norton == true %} 
                      <a href="https:\/\/safeweb.norton.com\/report\/show?url={{ canonical_url }}">
                         <div class="selo"><img src="{{ 'nortonlogo.svg' | asset_url }}" class="lazyload"  width="90"  height="35" alt="Selo do Norton"> </div>
                      </a>
                      {% else %}
